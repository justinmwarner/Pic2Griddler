<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:text="Name"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/etRandomName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@+id/bRandomNumColors"
            android:clickable="false"
            android:cursorVisible="false"
            android:ems="10"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:inputType="none" />

        <TextView
            android:id="@+id/tvCommentAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/etRandomName"
            android:layout_marginLeft="5dp"
            android:text="Tags"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/etRandomTags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/etRandomName"
            android:layout_alignRight="@+id/etRandomName"
            android:layout_alignTop="@+id/tvCommentAuthor"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:clickable="false"
            android:cursorVisible="false"
            android:ems="10"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:inputType="none"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <Button
            android:id="@+id/bRandomWidth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignRight="@+id/bRandomHeight"
            android:layout_below="@+id/etRandomTags"
            android:layout_marginLeft="5dp"
            android:text="Width" />

        <Button
            android:id="@+id/bRandomHeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/bRandomWidth"
            android:layout_marginLeft="5dp"
            android:layout_toLeftOf="@+id/etRandomTags"
            android:text="Height" />

        <Button
            android:id="@+id/bRandomNumColors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/bRandomHeight"
            android:layout_marginLeft="5dp"
            android:text="Number of Colors" />

        <TextView
            android:id="@+id/tvRandomWidth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/bRandomWidth"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:text="10"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/tvRandomHeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/bRandomHeight"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:text="10"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/tvRandomNumColors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/bRandomNumColors"
            android:layout_alignBottom="@+id/bRandomNumColors"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:text="4"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </RelativeLayout>

</RelativeLayout>